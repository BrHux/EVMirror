<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="@dimen/dp_300"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@drawable/card"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_70"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_60"
            app:srcCompat="@drawable/ic_usb_img" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/dp_190"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="clip_horizontal"
            android:text="请确保您的手机已开启调试模式，并连接USB线到电脑"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@color/gray"></View>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:gravity="center_vertical|left"
            android:text="投屏提示"
            android:textColor="@color/color_text_33"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center|left"
            android:text="1、USB投屏可直接连接，无需打开EV投屏APP"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center|left"
            android:text="2、如果连接失败可重新拔插usb再次尝试"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>